{
  "include": ["./types.d.ts"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "composite": true,
    "incremental": true,
    "moduleResolution": "Bundler",
    "outDir": "${configDir}/dist",
    "resolveJsonModule": true,
    "rootDir": "${configDir}",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  }
}